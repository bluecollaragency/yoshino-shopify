{%- style -%}
  .y-page-section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  .y-page-section-{{ section.id }}-bg-color {
    background-color: {{ section.settings.bg_color }}
  }
  @media screen and (min-width: 990px) {
    .y-page-section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div {% if section.settings.custom_id != blank %}id="{{ section.settings.custom_id }}"{% endif %} class="tw-relative y-page-section-{{ section.id }}-padding">
  <div class="tw-bg-[#23312C] tw-py-24">
    <div class="tw-container tw-px-6 lg:tw-px-4 ">
      <div class="tw-flex tw-items-center tw-justify-center">
        <img src="https://via.placeholder.com/1185x760" alt="">
      </div>
      <div class="tw-grid tw-grid-cols-1 lg:tw-grid-cols-3 tw-gap-8">
        {% for block in section.blocks %}  
          {% case block.type %}
            {% when 'column' %}
            <div class="tw-space-y-4 tw-text-{{ section.settings.paragraph_size }} tw-text-white">
              <img src="https://via.placeholder.com/50x50" alt="">
              <h3 
                class="tw-text-white tw-h{{ section.settings.headline_size }}"
              >
                {{ block.settings.column_headline | escape }}
              </h3>
              {{ block.settings.column_copy }}
            </div>
          {% endcase %} 
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Product - Features Hero",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "custom_id",
        "label": "Custom id for anchor links",
        "default": "overview"
      },
      {
        "type": "number",
        "id": "padding_top",
        "label": "t:sections.all.padding.padding_top",
        "default": 0
      },
      {
        "type": "number",
        "id": "padding_bottom",
        "label": "t:sections.all.padding.padding_bottom",
        "default":  0
      },
      {
        "type": "select",
        "id": "headline_size",
        "label": "Headline Size",
        "options": [
            {
              "value": "5",
              "label": "Headline 5"
            },
            {
              "value": "6",
              "label": "Headline 6"
            }
          ],
          "default": "5"
      },
      {
        "type": "select",
        "id": "paragraph_size",
        "label": "Paragraph Size",
        "options": [
            {
              "value": "sm",
              "label": "Small"
            },
            {
              "value": "base",
              "label": "Medium"
            }
          ],
          "default": "base"
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [
          {
            "id": "column_image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "column_headline",
            "type": "text",
            "label": "Column Headline",
            "default": "Headline 6"
          },
          {
            "id": "column_copy",
            "type": "richtext",
            "label": "Column Copy",
            "default": "<p>Integer posuere erat a ante venenatis dapibus posuere velit aliquet. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Nullam quis risus eget urna mollis ornare vel eu leo.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Product - Features Hero"
      }
    ]
  }
{% endschema %}