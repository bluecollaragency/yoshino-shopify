{%- style -%}
  .y-page-section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  .y-page-section-{{ section.id }}-bg-color {
    background-color: {{ section.settings.bg_color }}
  }
  @media screen and (min-width: 990px) {
    .y-page-section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="tw-relative y-page-section-{{ section.id }}-padding">
  <div class="tw-relative tw-block tw-h-[640px] tw-min-h-full">
    <span class="tw-absolute tw-inset-0 tw-w-full tw-h-full y-page-section-{{ section.id }}-bg-color tw-z-0"></span>
    <div class="tw-container tw-relative tw-block tw-px-6 lg:tw-px-4 tw-z-10 tw-h-full">
      <div 
        class="
          tw-flex tw-h-full tw-justify-{{ section.settings.content_align_x }} tw-items-{{ section.settings.content_align_y }}
        "
      >
        <div 
          class="tw-max-w-prose tw-py-20 tw-text-white tw-space-y-6 tw-text-{{ section.settings.text_align }}"
        >
          {%- if section.settings.headline != blank -%}
          <h2 class="tw-h3 tw-text-white">{{ section.settings.headline | escape }}</h2>
          {%- endif -%}
          {%- if section.settings.copy != blank -%}
          {{ section.settings.copy }}
          {%- endif -%}
          {%- if section.settings.button_cta and section.settings.button_link != blank -%}
            <a href="{{ section.settings.button_link }}" class="tw-btn tw-btn-green tw-mt-12">{{ section.settings.button_cta | escape }}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Custom Full Width Image",
    "class": "section",
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#000"
      },
      {
        "id": "headline",
        "type": "text",
        "label": "Headline",
        "default": "Headline 3"
      },
      {
        "id": "copy",
        "type": "richtext",
        "label": "Copy",
        "default": "<p>Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis vestibulum. Sed posuere consectetur est at lobortis.</p>"
      },
      {
        "id": "button_link",
        "type": "url",
        "label": "Button Link"
      },
      {
        "id": "button_cta",
        "type": "text",
        "label": "Button CTA"
      },
      {
        "id": "content_align_y",
        "type": "select",
        "label": "Vertical Align",
        "options": [
          {
            "value": "start",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Middle"
          },
          {
            "value": "end",
            "label": "Bottom"
          }
        ],
        "default": "end"
      },
      {
        "id": "content_align_x",
        "type": "select",
        "label": "Horizontal Align",
        "options": [
          {
            "value": "start",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "end",
            "label": "Right"
          }
        ],
        "default": "start"
      },
      {
        "id": "text_align",
        "type": "select",
        "label": "Text Align",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
      {
        "type": "number",
        "id": "padding_top",
        "label": "t:sections.all.padding.padding_top",
        "default": 0
      },
      {
        "type": "number",
        "id": "padding_bottom",
        "label": "t:sections.all.padding.padding_bottom",
        "default":  0
      }
    ],
    "presets": [
      {
        "name": "Custom Full Width Image"
      }
    ]
  }
{% endschema %}