{%- style -%}
  .y-page-section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  .y-page-section-{{ section.id }}-bg-color {
    background-color: {{ section.settings.bg_color }}
  }
  @media screen and (min-width: 990px) {
    .y-page-section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div 
  class="
    tw-relative 
    y-page-section-{{ section.id }}-padding
    {% if section.settings.hide_mobile == true %} tw-hidden lg:tw-block{% endif %}
  "
>
  <div class="tw-relative tw-block tw-h-[640px] tw-min-h-full">
    <span class="tw-absolute tw-inset-0 tw-w-full tw-h-full y-page-section-{{ section.id }}-bg-color tw-z-0">
      {%- if section.settings.image != blank -%}
          <img
            srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
            {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
            {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
            {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
            {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
            {%- if section.settings.image.width >= 2400 -%}{{ section.settings.image | image_url: width: 2400 }} 2400w,{%- endif -%}
            {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
            src="{{ section.settings.image | image_url: width: 1500 }}"
            sizes="100vw"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="tw-w-full tw-h-full tw-object-cover"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'tw-w-full tw-h-full tw-object-cover' }}
        {%- endif -%}
    </span>
    {%- if section.settings.headline != blank or section.settings.copy != blank or section.settings.button_link != blank -%}
    <div class="tw-container tw-relative tw-block tw-px-6 lg:tw-px-4 tw-z-10 tw-h-full">
      <div 
        class="
          tw-flex tw-h-full tw-justify-start lg:tw-justify-{{ section.settings.content_align_x }} tw-items-end lg:tw-items-{{ section.settings.content_align_y }}
        "
      >
        <div 
          class="tw-max-w-prose tw-py-20 tw-text-white tw-space-y-6 tw-text-{{ section.settings.text_align }}"
        >
          {%- if section.settings.headline != blank -%}
          <h2 class="tw-h{{ section.settings.headline_size }} tw-text-white">{{ section.settings.headline | escape }}</h2>
          {%- endif -%}
          {%- if section.settings.copy != blank -%}
          <div class="tw-text-{{ section.settings.copy_size }}">{{ section.settings.copy }}</div>
          {%- endif -%}
          {%- if section.settings.button_cta and section.settings.button_link != blank -%}
            <a href="{{ section.settings.button_link }}" class="tw-btn tw-btn-green tw-mt-12">{{ section.settings.button_cta | escape }}</a>
          {%- endif -%}
        </div>
      </div>
    </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "Custom Full Width Image",
    "class": "section",
    "settings": [
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#000"
      },
      {
        "id": "headline",
        "type": "text",
        "label": "Headline",
        "default": "Headline 3"
      },
      {
        "type": "select",
        "id": "headline_size",
        "label": "Headline Size",
        "options": [
            {
              "value": "3",
              "label": "Headline 3"
            },
            {
              "value": "xl",
              "label": "Display 1"
            }
          ],
          "default": "3"
      },
      {
        "id": "copy",
        "type": "richtext",
        "label": "Copy",
        "default": "<p>Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis vestibulum. Sed posuere consectetur est at lobortis.</p>"
      },
      {
        "type": "select",
        "id": "copy_size",
        "label": "Copy Size",
        "options": [
            {
              "value": "base",
              "label": "Base"
            },
            {
              "value": "xl",
              "label": "Large"
            }
          ],
          "default": "base"
      },
      {
        "id": "button_link",
        "type": "url",
        "label": "Button Link"
      },
      {
        "id": "button_cta",
        "type": "text",
        "label": "Button CTA"
      },
      {
        "id": "content_align_y",
        "type": "select",
        "label": "Vertical Align",
        "options": [
          {
            "value": "start",
            "label": "Top"
          },
          {
            "value": "center",
            "label": "Middle"
          },
          {
            "value": "end",
            "label": "Bottom"
          }
        ],
        "default": "end"
      },
      {
        "id": "content_align_x",
        "type": "select",
        "label": "Horizontal Align",
        "options": [
          {
            "value": "start",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "end",
            "label": "Right"
          }
        ],
        "default": "start"
      },
      {
        "id": "text_align",
        "type": "select",
        "label": "Text Align",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      },
      {
        "type": "checkbox",
        "id": "hide_mobile",
        "label": "Hide on Mobile?",
        "default": false
      },
      {
        "type": "number",
        "id": "padding_top",
        "label": "t:sections.all.padding.padding_top",
        "default": 0
      },
      {
        "type": "number",
        "id": "padding_bottom",
        "label": "t:sections.all.padding.padding_bottom",
        "default":  0
      }
    ],
    "presets": [
      {
        "name": "Custom Full Width Image"
      }
    ]
  }
{% endschema %}