{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .y-page-section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 990px) {
    .y-page-section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .slider--desktop .slider__slide:first-child {
    margin: 0 !important;
    scroll-margin-left: 0 !important;
  }
  @media screen and (min-width: 990px) {
    .slider.slider--desktop .slider__slide:last-child {
      margin-right: 0 !important;
    }
  }
</style>
<div class="image-hero-slider y-page-section-{{ section.id }}-padding">
    <slider-component class="">
      <div 
        class="tw-flex tw-flex-wrap slider slider--desktop slider--tablet !tw-scroll-pl-0"
        id="Slider-{{section.id}}-slider" 
        role="list"
      >
        {% for block in section.blocks %}  
          {% case block.type %}
          {%- when 'images' -%}
            <div 
              class="slider__slide tw-relative tw-block tw-w-full tw-h-[640px] lg:tw-h-[800px] tw-min-h-full"
              id="Slide-{{section.id}}-{{ forloop.index }}"
            >
              <span class="tw-absolute tw-inset-0 tw-w-full tw-h-full y-page-section-{{ section.id }}-bg-color tw-z-0">
                {%- if block.settings.image != blank -%}
                  <picture>
                    <source 
                      media="(min-width:640px)" 
                      srcset="
                        {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                        {%- if block.settings.image.width >= 1070 -%}{{ block.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
                        {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                        {%- if block.settings.image.width >= 2400 -%}{{ block.settings.image | image_url: width: 2400 }} 2400w,{%- endif -%}
                        {{ block.settings.image | image_url }} {{ block.settings.image.width }}w
                      "
                    >
                    <img
                      {% if block.settings.mobile_image != blank %}
                        src="{{ block.settings.mobile_image | image_url: width: 1280 }}"
                      {% else %}
                        src="{{ block.settings.image | image_url: width: 1280 }}"
                      {% endif %}
                      sizes="100vw"
                      alt="{{ block.settings.image.alt | escape }}"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                      class="tw-w-full tw-h-full tw-object-cover"
                      style="object-position: {{ block.settings.image_align_x }}% {{ block.settings.image_align_y }}%"
                    >
                  </picture>
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'tw-w-full tw-h-full tw-object-cover' }}
                {%- endif -%}
              </span>
              {%- if block.settings.headline != blank or block.settings.copy != blank or block.settings.button_link != blank -%}
                <div class="tw-max-w-screen-xxl tw-mx-auto tw-relative tw-block tw-px-6 lg:tw-px-4 tw-z-10 tw-h-full">
                  <div 
                    class="
                      tw-flex tw-h-full tw-justify-start lg:tw-justify-{{ block.settings.content_align_x }} tw-items-end lg:tw-items-{{ block.settings.content_align_y }}
                    "
                  >
                    <div 
                      class="tw-max-w-prose tw-py-20 tw-text-white tw-space-y-6 tw-text-{{ block.settings.text_align }}"
                    >
                      {%- if block.settings.headline != blank -%}
                      <h2 class="tw-h{{ block.settings.headline_size }} tw-text-white">{{ block.settings.headline }}</h2>
                      {%- endif -%}
                      {%- if block.settings.copy != blank -%}
                      <div class="tw-text-{{ block.settings.copy_size }}">{{ block.settings.copy }}</div>
                      {%- endif -%}
                      {%- if block.settings.button_cta and block.settings.button_link != blank -%}
                        <a href="{{ block.settings.button_link }}" class="tw-btn tw-btn-green tw-mt-12">{{ block.settings.button_cta | escape }}</a>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
                {%- endif -%}
              {% comment %} <div class="tw-relative tw-w-full tw-pb-[80%] lg:tw-pb-[50%] tw-bg-white">
                <img
                  srcset="{%- if block.settings.image.width >= 165 -%}{{ block.settings.image | image_url: width: 165 }} 165w,{%- endif -%}
                  {%- if block.settings.image.width >= 360 -%}{{ block.settings.image | image_url: width: 360 }} 360w,{%- endif -%}
                  {%- if block.settings.image.width >= 535 -%}{{ block.settings.image | image_url: width: 535 }} 535w,{%- endif -%}
                  {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | image_url: width: 750 }} 750w,{%- endif -%}
                  {%- if block.settings.image.width >= 1070 -%}{{ block.settings.image | image_url: width: 1070 }} 1070w,{%- endif -%}
                  {%- if block.settings.image.width >= 1500 -%}{{ block.settings.image | image_url: width: 1500 }} 1500w,{%- endif -%}
                  {%- if block.settings.image.width >= 2400 -%}{{ block.settings.image | image_url: width: 2400 }} 2400w,{%- endif -%}
                  {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
                  src="{{ block.settings.image | image_url: width: 1500 }}"
                  sizes="100vw"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="eager"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  class="tw-w-full tw-h-full tw-object-cover tw-left-0 tw-top-0 tw-absolute"
                >
              </div> {% endcomment %}
            </div>
          {% endcase %} 
        {% endfor %}
        
      </div>

      <div class="slider-buttons no-js-hidden">
        <button type="button" class="slider-button slider-button--prev tw-text-gray-800 disabled:tw-cursor-not-allowed disabled:tw-opacity-50" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-arrow-left' %}</button>
        <div class="slider-counter caption">
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total"></span>
        </div>
        <button type="button" class="slider-button slider-button--next tw-text-gray-800 disabled:tw-cursor-not-allowed disabled:tw-opacity-50" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-arrow-right' %}</button>
      </div>
    </slider-component>

</div>

{% schema %}
  {
    "name": "Image Hero Slider",
    "settings": [
      {
        "type": "number",
        "id": "padding_top",
        "label": "t:sections.all.padding.padding_top",
        "default": 96
      },
      {
        "type": "number",
        "id": "padding_bottom",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "images",
        "name": "Images",
        "settings": [
          {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "mobile_image",
            "type": "image_picker",
            "label": "Mobile Image"
          },
          {
            "id": "image_align_x",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 1,
            "label": "Image align X",
            "default": 50
          },
          {
            "id": "image_align_y",
            "type": "range",
            "min": 0,
            "max": 100,
            "step": 1,
            "label": "Image align Y",
            "default": 50
          },
          {
            "type": "color",
            "id": "bg_color",
            "label": "Background Color",
            "default": "#000"
          },
          {
            "id": "headline",
            "type": "text",
            "label": "Headline",
            "default": "Display 1"
          },
          {
            "type": "select",
            "id": "headline_size",
            "label": "Headline Size",
            "options": [
                {
                  "value": "3",
                  "label": "Headline 3"
                },
                {
                  "value": "xl",
                  "label": "Display 1"
                }
              ],
              "default": "xl"
          },
          {
            "id": "copy",
            "type": "richtext",
            "label": "Copy",
            "default": "<p>Aenean eu leo quam. Pellentesque ornare sem lacinia quam venenatis vestibulum. Sed posuere consectetur est at lobortis.</p>"
          },
          {
            "type": "select",
            "id": "copy_size",
            "label": "Copy Size",
            "options": [
                {
                  "value": "base",
                  "label": "Base"
                },
                {
                  "value": "xl",
                  "label": "Large"
                }
              ],
              "default": "xl"
          },
          {
            "id": "button_link",
            "type": "url",
            "label": "Button Link"
          },
          {
            "id": "button_cta",
            "type": "text",
            "label": "Button CTA"
          },
          {
            "id": "content_align_y",
            "type": "select",
            "label": "Vertical Align",
            "options": [
              {
                "value": "start",
                "label": "Top"
              },
              {
                "value": "center",
                "label": "Middle"
              },
              {
                "value": "end",
                "label": "Bottom"
              }
            ],
            "default": "center"
          },
          {
            "id": "content_align_x",
            "type": "select",
            "label": "Horizontal Align",
            "options": [
              {
                "value": "start",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "end",
                "label": "Right"
              }
            ],
            "default": "start"
          },
          {
            "id": "text_align",
            "type": "select",
            "label": "Text Align",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ],
            "default": "left"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image Hero Slider"
      }
    ]
  }
{% endschema %}