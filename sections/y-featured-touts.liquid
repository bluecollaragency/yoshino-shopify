<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

<div class="featured-touts tw-relative tw-block tw-overflow-hidden">

  <div class="tw-max-w-screen-xxl tw-mx-auto -mx-4">
    <slider-component class="">
      <div class="tw-flex tw-flex-wrap tw-gap-y-8 slider slider--tablet" id="Slider-template--featured-touter" role="list">

        {% for block in section.blocks %}  
          {% case block.type %}
            {% when 'tout' %}
            {% include 'y-featured-tout' %}
          {% endcase %}
        {% endfor %}

      </div>
      <div class="slider-buttons no-js-hidden large-up-hide">
        <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
        <div class="slider-counter caption">
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total"></span>
        </div>
        <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
      </div>
    </slider-component>
  </div>

</div>
{% schema %}
  {
    "name": "Featured Touts",
    "class": "section",
    "settings": [
  
    ],
    "blocks": [
      {
        "type": "tout",
        "name": "Tout",
        "settings": [
          {
            "id": "tout_width",
            "type": "select",
            "label": "Tout Width",
            "options": [
              {
                "value": "1/2",
                "label": "50%"
              },
              {
                "value": "full",
                "label": "100%"
              }
            ],
            "default": "1/2"
          },
          {
            "id": "tout_height",
            "type": "select",
            "label": "Tout Height",
            "options": [
              {
                "value": "380px",
                "label": "Small"
              },
              {
                "value": "760px",
                "label": "Large"
              }
            ],
            "default": "380px"
          },
          {
            "id": "tout_image",
            "type": "image_picker",
            "label": "Image"
          },
          {
            "id": "tout_headline",
            "type": "text",
            "label": "Tout Headline",
            "default": "Headline 4"
          },
          {
            "id": "tout_copy",
            "type": "richtext",
            "label": "Tout Copy",
            "default": "<p>Integer posuere erat a ante venenatis dapibus posuere velit aliquet. Cras justo odio, dapibus ac facilisis in, egestas eget quam. Nullam quis risus eget urna mollis ornare vel eu leo.<p>"
          },
          {
            "id": "button_link",
            "type": "url",
            "label": "Button Link"
          },
          {
            "id": "button_cta",
            "type": "text",
            "label": "Button CTA",
            "default": "Learn More"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured Touts"
      }
    ]
  }
{% endschema %}