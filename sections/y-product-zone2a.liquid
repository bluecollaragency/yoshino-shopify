{%- if section.settings.image != blank -%}
{%- style -%}
  .y-page-section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
  .y-page-section-{{ section.id }}-bg-color {
    background-color: {{ section.settings.bg_color }}
  }
  @media screen and (min-width: 990px) {
    .y-page-section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{%- endif -%}
{%- if section.settings.image != blank -%}
<div {% if section.settings.custom_id != blank %}id="{{ section.settings.custom_id }}"{% endif %} class="tw-relative tw-block tw-h-[640px] tw-min-h-full y-page-section-{{ section.id }}-padding {% if section.settings.hide_mobile == true %} tw-hidden lg:tw-block{% endif %}">
  <span class="tw-absolute tw-inset-0 tw-w-full tw-h-full y-page-section-{{ section.id }}-bg-color tw-z-0">
      {%- if section.settings.image != blank -%}
          <img
            srcset="
            {{ section.settings.image | image_url: width: 165 }} 165w,
            {{ section.settings.image | image_url: width: 360 }} 360w,
            {{ section.settings.image | image_url: width: 535 }} 535w,
            {{ section.settings.image | image_url: width: 750 }} 750w,
            {{ section.settings.image | image_url: width: 1070 }} 1070w,
            {{ section.settings.image | image_url: width: 1500 }} 1500w,
            {{ section.settings.image | image_url: width: 2400 }} 2400w,
            {{ section.settings.image | image_url }} 1500w"
            src="{{ section.settings.image | image_url: width: 1500 }}"
            sizes="100vw"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="tw-w-full tw-h-full tw-object-cover"
          >
        {%- endif -%}
    </span>
  <div class="tw-container tw-relative tw-block tw-px-6 lg:tw-px-4 tw-z-10 tw-h-full">
    <div 
      class="
        tw-flex tw-h-full tw-justify-start tw-items-end
      "
    >
      <div 
        class="tw-max-w-prose tw-py-20 tw-text-white tw-space-y-6 tw-text-left"
      >
        {%- if section.settings.headline != blank -%}
          <h2 class="tw-h3 tw-text-white">{{ section.settings.headline | escape }}</h2>
        {%- endif -%}
        {%- if section.settings.copy != blank -%}
          {{ section.settings.copy }}
        {%- endif -%}
        {%- if section.settings.button_cta and section.settings.button_link != blank -%}
          <a href="{{ section.settings.button_link }}" class="tw-btn tw-btn-green tw-mt-12">{{ section.settings.button_cta | escape }}</a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
{%- endif -%}
{% schema %}
  {
    "name": "Product Zone 2a",
    "class": "section",
    "settings": [
      {
        "type": "text",
        "id": "custom_id",
        "label": "Custom id for anchor links"
      },
      {
        "id": "image",
        "type": "image_picker",
        "label": "Image"
      },
      {
        "id": "mobile_image",
        "type": "image_picker",
        "label": "Mobile Image"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#000"
      },           
      {
        "type": "checkbox",
        "id": "hide_mobile",
        "label": "Hide on Mobile?",
        "default": false
      },
      {
        "type": "number",
        "id": "padding_top",
        "label": "t:sections.all.padding.padding_top",
        "default": 0
      },
      {
        "type": "number",
        "id": "padding_bottom",
        "label": "t:sections.all.padding.padding_bottom",
        "default":  0
      }
    ],
    "presets": [
      {
        "name": "Product Zone 2a"
      }
    ]
  }
{% endschema %}